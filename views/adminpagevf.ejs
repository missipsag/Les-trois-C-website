                </div>

                <!-- Desktop Table View -->
                <div class="desktop-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Client</th>
                                <th>√âv√©nement</th>
                                <th>Date</th>
                                <th>Statut</th>
