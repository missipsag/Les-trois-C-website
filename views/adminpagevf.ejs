                        </div>
                        <% }) %>
                </div>

                <!-- Desktop Table View -->
                <div class="desktop-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Client</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="reviews-table">
                            <% reviews.forEach(review=> { %>
                                <tr data-status="<%= review.status %>">
                                    <td>
                                        <strong>
                                            <%= review.authorFirstName %> <%= review.authorLastName %>
                                        </strong><br>
                                        <small>
                                            <%= review.authorEmail %>
